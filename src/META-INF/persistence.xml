<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="LibraryManagementSystemPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>librarymanagementsystem.models.Borrower</class>
    <class>librarymanagementsystem.models.User</class>
    <class>librarymanagementsystem.models.BookBorrower</class>
    <class>librarymanagementsystem.models.Category</class>
    <class>librarymanagementsystem.models.Books</class>
    <class>librarymanagementsystem.models.Profile</class>
    <class>librarymanagementsystem.models.BookOverdue</class>
    <class>librarymanagementsystem.models.TblUser</class>
    <class>librarymanagementsystem.models.Setting</class>
    <class>librarymanagementsystem.models.SmsNotificationLog</class>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_librarymanagement?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="eclipselink.query-results-cache" value="false"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
